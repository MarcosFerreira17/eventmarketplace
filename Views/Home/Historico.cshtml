@model IEnumerable<EventMarketplace.Models.Venda>
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Historico de compra";
}

<div class="container">
    <h2>Histórico de compra</h2>
    <hr>

    <script>
        $(document).ready(function () {
            $('#compra').DataTable({
                "info": false,
                "language": {
                    "lengthMenu": "Mostrando _MENU_ Registros por página",
                    "zeroRecords": "Nada encontrado",
                    "info": "Mostrando página _PAGE_ de _PAGES_",
                    "infoEmpty": "Nenhum registro disponível",
                    "search": "Buscar:",
                    "paginate": {
                        "first": "Primeiro",
                        "last": "Ultimo",
                        "next": "Proximo",
                        "previous": "Anterior"
                    }
                }
            });
        });
    </script>

    <table id="compra" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome do Evento</th>
                <th>Data da Venda</th>
                <th>Qtd. de Ingressos</th>
                <th>Valor da Venda</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var venda in Model)
            {
                <tr>
                    <td>@venda.Id</td>
                    <td>@venda.Evento.Nome</td>
                    <td>@venda.Data.ToShortDateString()</td>
                    <td>@venda.QuantidadeIngresso</td>
                    <td>R$ @venda.ValorDaVenda.ToString("f2")</td>
                </tr>
            }
        </tbody>
    </table>
</div>